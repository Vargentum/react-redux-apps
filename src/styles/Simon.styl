$simon = {
  size: 200px  

  sectors: {
    topRight: red,
    bottomRight: green,
    bottomLeft: blue,
    topLeft: yellow
  }
}


.sectorsBoard
  width: $simon.size
  height: $simon.size
  display: flex
  flex-wrap: wrap

.sector
  flex-basis: 50%
  height @width
  border: 1px solid #666
  transition: background-color .2s
  
  &:active
    transform: translateY(2px)

  for k,v in $simon.sectors
    &-{k}
      background-color: v
      
    &-{k}Active
      border-color: v
      background-color: transparent
      // background-color: lighten(v, 25%)
        

.translator
  position relative
  display inline-block
  
.translatorRefresh
  position absolute 
  bottom 0 
  left calc(100% \+ 15px)
