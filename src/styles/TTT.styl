.gameField
  flex-basis: 150px
  // border-collapse: collapse

  tr:first-child td
    border-top none
      
  tr:last-child td
    border-bottom none

  td:first-child
    border-left none
    
  td:last-child
    border-right none

  td
    width: 50px
    height: @width
    border: 1px solid #666
    text-align: center
    vertical-align middle


.scoreTable
  
  td, th
    border: 1px solid #999
    padding: 5px 10px
    text-align: center
    min-width: 50px
    
.wrapper
  display: flex
  &>*
    margin-right: 25px
    

.resetButtons
  button
    display block
    margin-bottom: 5px